= simple_form_for @weblink, html: { multipart: true} do |f|
	.form-group
		%h4 Catégorie
		= f.select :category do
			- [['-Aucune','-Aucune'],['Annonce', 'Annonce'],['Actualité', 'Actualité'], ['Blog', 'Blog'], ['Couture', 'Couture'], ['Education', 'Education'], ['Entreprise', 'Entreprise'], ['E-commerce', 'E-commerce'], ['Fashion', 'Fashion'], ['Freelancer', 'Freelancer'], ['Gouv', 'Gouv'], ['Hotel', 'Hotel'], ['People', 'People'], ['Restaurant', 'Restaurant'], ['Tech/Informatique', 'Tech/Informatique'], ['Résaux Social', 'Résaux Social']].each do |c|
				= content_tag(:option, c.first, value: c.last)
	.form-group
		= f.input :name, input_html: { class: 'form-control'}
	.form-group
		= f.input :description, input_html: { class: 'form-control'}
	.form-group
		= f.input :link, input_html: { class: 'form-control'}
		%br/
		=f.button :submit, class: "btn btn-primary"